{
  "name": "fc2-reflection",
  "displayName": "fc2 Reflection",
  "description": "fc2 using reflection.lua for VS Code",
  "publisher": "wholecream",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fc2.auth",
        "title": "fc2: Authenticate"
      },
      {
        "command": "fc2.execute",
        "title": "fc2: Execute"
      },
      {
        "command": "fc2.reset",
        "title": "fc2: Reset"
      },
      {
        "command": "fc2.reload",
        "title": "fc2: Reload"
      },
      {
        "command": "fc2.scripts",
        "title": "fc2: Scripts"
      },
      {
        "command": "fc2.copy",
        "title": "Copy",
        "icon": "$(output-view-icon)"
      },
      {
        "command": "fc2.scripts.toggle",
        "title": "Toggle",
        "icon": "$(play-circle)"
      },
      {
        "command": "fc2.scripts.open",
        "title": "Open",
        "icon": "$(cloud-download)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "fc2.copy",
          "when": "viewItem == fc2Detail",
          "group": "inline",
          "icon": "$(copy)"
        },
        {
          "command": "fc2.scripts.toggle",
          "when": "viewItem == fc2ScriptEntry",
          "group": "inline",
          "icon": "$(play-circle)"
        },
        {
          "command": "fc2.scripts.open",
          "when": "viewItem == fc2ScriptEntry",
          "group": "inline",
          "icon": "$(cloud-download)"
        }
      ]
    },
    "configuration": [
      {
        "title": "fc2",
        "properties": {
          "fc2.reflection.pipe": {
            "title": "fc2 Reflection Pipe",
            "type": "boolean",
            "default": false,
            "description": "Changes mode to PIPE for file-based communication"
          },
          "fc2.reflection.port": {
            "title": "fc2 Reflection Port",
            "type": "number",
            "default": 9282,
            "description": "The port we would need to use if using HTTP mode, Universe4 - 9282, Constellation4 - 9283"
          },
          "fc2.reflection.input": {
            "title": "fc2 Reflection Input",
            "type": "string",
            "default": "",
            "description": "The input location if using PIPE mode"
          },
          "fc2.reflection.output": {
            "title": "fc2 Reflection Output",
            "type": "string",
            "default": "",
            "description": "The output location if using PIPE mode"
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fc2-sidebar",
          "title": "fc2 - Reflection",
          "icon": "$(star)"
        }
      ]
    },
    "views": {
      "fc2-sidebar": [
        {
          "id": "fc2-runtime",
          "name": "Runtime"
        },
        {
          "id": "fc2-scripts",
          "name": "Scripts"
        },
        {
          "id": "fc2-session",
          "name": "Session"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
